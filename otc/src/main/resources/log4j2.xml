<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <File name="A1" fileName="${sys:user.home}/.otc/otc.log" append="true">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </File>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="debug">
  <!-- <AppenderRef ref="STDOUT"/>  -->           
      <AppenderRef ref="A1"/>
     
    </Root>
  </Loggers>
</Configuration>